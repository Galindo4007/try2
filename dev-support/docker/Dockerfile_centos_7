# Dockerfile for installing the necessary dependencies for building Hadoop.
# See BUILDING.txt.

FROM centos:7

WORKDIR /root

SHELL ["/bin/bash", "-o", "pipefail", "-c"]

RUN yum makecache -q -y \
    && yum install -y \
    ant \
    bats \
    build-essential \
    bzip2 \
    clang \
    cmake \
    curl \
    doxygen \
    fuse \
    g++ \
    gcc \
    git \
    gnupg-agent \
    hugo \
    libbcprov-java \
    libbz2-dev \
    libcurl4-openssl-dev \
    libfuse-dev \
    libprotobuf-dev \
    libprotoc-dev \
    libsasl2-dev \
    libsnappy-dev \
    libssl-dev \
    libtool \
    libzstd-dev \
    locales \
    make \
    maven \
    nodejs \
    node-yarn \
    npm \
    openjdk-11-jdk \
    openjdk-8-jdk \
    pinentry-curses \
    pkg-config \
    python3 \
    python3-pip \
    python3-pkg-resources \
    python3-setuptools \
    python3-wheel \
    rsync \
    shellcheck \
    software-properties-common \
    sudo \
    valgrind \
    zlib1g-dev
